{
  "description": "Validates atl CLI availability and blocks direct Atlassian URL fetching",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-atl-available.sh",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/block-atlassian-webfetch.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
